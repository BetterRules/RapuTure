.container
  %h1= @scenario.name
  = render 'outputs', variables: @variables
  %h2 Inputs
  - @scenario.inputs.each do |key1, value1|
    - if key1 == 'persons'
      = render 'persons', people: value1, variables: @variables 
    - elsif key1 == 'families'
      = render 'families', families: value1, variables: @variables 
    - elsif key1 == 'titled_properties'
      = render 'properties', properties: value1, variables: @variables 
    - else
      - if value1.class == Hash || value1.class == Array
        %hr/
        %i
          %h3
          = "#{key1.humanize}: "
        - value1.each do |key2, value2|
          .card
            .card-body
              %h4.card-title
                = "#{key2.humanize}:"
              - if value2.class == Hash || value2.class == Array
                - value2.each do |key3, value3|
                  = "#{key3.humanize}: #{value3}"
              - else
                = value2
      - else
        - vari = @variables.select { |variable| variable['name'] == key1 }[0]
        %hr/
        .card
          .card-body
            %h6.card-title
              = link_to vari.description, vari || key
              = ": #{value1}"
  %hr/
  %i
    %h3 Variables used in this scenario:
  .card
    .card-body
      %ul
        - @variables.each do |v|
          %li
            = link_to v.description, v
            