
- if @scenario.input_persons.size.positive?
  %h3.sub-heading Persons
  - @scenario.input_persons.each do |person_name, attributes|
    = render 'input_card', name: person_name, icon: '👤', attributes: attributes

- if @scenario.input_families.size.positive?
  %hr/
  %h3.sub-heading Families
  - @scenario.input_families.each do |family_name, attributes|
    = render 'input_card', name: family_name, icon: '👥', attributes: attributes

- if @scenario.input_titled_properties.size.positive?
  %hr/
  %h3.sub-heading Properties (Houses etc)
  - @scenario.input_titled_properties.each do |property_name, attributes|
    = render 'input_card', name: property_name, icon: '🏠', attributes: attributes

- if @scenario.other_input_keys.size.positive?
  .card
    .card-body
      %ul.list-group.list-group-flush
        - @scenario.other_input_keys.each do |key|
          %li.list-group-item
            %strong= link_if_variable(key)
            .pull-right= @scenario.inputs[key].to_json
