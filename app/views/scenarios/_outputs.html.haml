%hr/
%h2 Outputs
.card-columns
  - @scenario.outputs.each do |name, value|
    .card
      .card-body
        - vari = variables.select { |variable| variable['name'] == name }.first
        - if value.is_a? Enumerable
          %h4.card-title
            = link_to vari.description, vari || name
          - value.each do |key, value|
            %ul
              %li
                %h5
                  = "#{key}: "
                  - if value.class == Array
                    - value.each do |value|
                      = "#{value}$ "
                  - else
                    = "#{value}$ "
        - else
          %h6.card-title
            = link_to vari.description, vari || name
            = ": #{value}"
