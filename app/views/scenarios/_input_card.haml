.card
  .card-header #{icon} #{name}
  .card-body
    %ul.list-group.list-group-flush
      - attributes.each do |key, value|
        %li.list-group-item
          %strong= link_if_variable(key)
          .pull-right
            - if value.class == Array
              - value.each do |item|
                = item
            - elsif value.is_a? Enumerable
              %table
                - value.each do |key, item|
                  %tr
                    %th= key
                    %td= item.to_json
            - else
              %p= value.to_json