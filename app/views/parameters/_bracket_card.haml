- values.each do |val|
  .card-body
    %ul.list-unstyled
      - val.each do |key, val|
        .card
          .card-header
            %li
              %h6= key.to_s.capitalize

          .card-body
            %ul
              - unless val.nil?
                - val.each do |key2, val2|
                  %p
                    %b= #{key2}:
                    - val2.each do |val3|
                      = number_to_currency(val3.last)
